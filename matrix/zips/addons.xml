<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.program.Xanwiz" name="Xanax Wizard" version="2.0.7" provider-name="Xanax">
    <requires>
        <import addon="xbmc.python" version="3.0.0" />
        <import addon="script.module.requests" />
        <import addon="script.module.six" />
        <import addon="script.kodi.android.update" optional="true" version="1.1.7" />
        <import addon="script.speedtester" optional="true" version="1.1.2" />
    </requires>

    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>executable</provides>
    </extension>

    <extension point="xbmc.service" library="startup.py" start="startup" />

    <extension point="xbmc.addon.metadata">
        <summary lang="en">Xanax Wizard</summary>
        <description lang="en">Xanax Wizard offers many maintenance features, selective add-on data saving, and automated build installs.</description>
        <platform>all</platform>
        <reuselanguageinvoker>false</reuselanguageinvoker>
        <source>https://team-xanax.github.io/zips/repository.Xanax/</source>
        <news>
2.0.7
 - Initial Commit
        </news>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.png</fanart>
        </assets>
    </extension>
</addon>

<addon id="repository.Xanax" name="[COLOR blue][B]Xanax[/B][/COLOR]Wizard Repository" version="2.0" provider-name="Xanax">
    <extension point="xbmc.addon.repository" name="[COLOR limegreen][B]Xanax[/B][/COLOR]Wizard Repository">
        <dir minversion="18.0" maxversion="18.9.0">
            <info compressed="false">https://team-xanax.github.io/leia/zips/addons.xml</info>
            <checksum>https://team-xanax.github.io/leia/zips/addons.xml.md5</checksum>
            <datadir zip="true">https://team-xanax.github.io/leia/zips/</datadir>
        </dir>
        <dir minversion="18.9.9">
            <info compressed="false">https://team-xanax.github.io/matrix/zips/addons.xml</info>
            <checksum>https://team-xanax.github.io/matrix/zips/addons.xml.md5</checksum>
            <datadir zip="true">https://team-xanax.github.io/matrix/zips/</datadir>
        </dir>
    </extension>

    <extension point="xbmc.addon.metadata">
        <summary>[COLOR blue][B]Xanax[/B][/COLOR]Wizard</summary>
        <description>The official home of [COLOR limegreen][B]Xanax[/B][/COLOR]Wizard.</description>
        <disclaimer></disclaimer>
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
        <source>https://team-xanax.github.io/zips/repository.Xanax/</source>
    </extension>
</addon>

